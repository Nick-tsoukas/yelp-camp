<% include ../partials/header %>
  <div class="container">
    <div style="margin-left: auto;margin-right: auto;">
      <h1 style="text-align:center ">Add new comment</h1>
      <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group">
          <input style="margin: 2.5em auto 0 auto; max-width: 30%" class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>
        <div class="form-group">
          <input style="margin:0 auto; max-width: 30%" class="form-control"type="text" name="comment[author]" placeholder="author name">
        </div>
        <div class="form-group">
          <button style="margin: 0 auto; max-width: 30%"  class="btn btn-block btn-md btn-primary">Submit!</button>
        </div>
        <div class="form-group">
          <a style="display:block;margin: 0 auto; max-width: 30%" href="/campgrounds">Go Back </a>
        </div>
      </form>
    </div>
  </div>
<% include ../partials/footer %>
